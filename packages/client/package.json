{
	"name": "@react-adminer/client",
	"version": "0.0.1",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/JaLe29/react-adminer.git"
	},
	"types": "./dist/index.d.ts",
	"main": "./src/index.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"publish": "yarn clean && yarn build:prod && yarn workspace @react-adminer/react-querier npm publish",
		"watch": "yarn build:deps && yarn build:prod",
		"watch:types": "tsc --watch --project tsconfig.watch.json",
		"build:prod": "vite build --mode release && yarn build:types",
		"build:types": "tsc --project tsconfig.watch.json",
		"build": "tsc --build tsconfig.build.json",
		"build:dev": "yarn build:deps && tsc --build tsconfig.build.json",
		"clean": "rimraf dist && rimraf .cache && rimraf node_modules",
		"lint": "eslint \"src/**/*.ts\"",
		"lint:fix": "eslint \"src/**/*.ts\" --fix"
	},
	"dependencies": {
		"@ant-design/icons": "^4.7.0",
		"antd": "^4.21.6",
		"lodash": "^4.17.21",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-is": "^18.2.0",
		"react-router-dom": "^6.3.0"
	},
	"devDependencies": {
		"@types/lodash": "^4.14.182",
		"@types/node": "^16.11.36",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"@types/react-is": "^17.0.3",
		"@types/react-router-dom": "^5.3.3",
		"@vitejs/plugin-react": "^1.3.2",
		"eslint": "^8.19.0",
		"fs-extra": "^10.1.0",
		"react": "^18.2.0",
		"rimraf": "^3.0.2",
		"tslib": "^2.4.0",
		"typescript": "~4.7.4",
		"vite": "^2.9.14"
	},
	"peerDependencies": {
		"react": "^16.8.0 || ^17.0.0 || ^18.0.0"
	}
}
